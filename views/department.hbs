<div class="row">
    <div class="col-md-12">
        <h2>{{department.departmentName}} - Department: {{ department.departmentId}}</h2>
        <hr />
        <form method="post" action="/department/update">

            <input type="hidden" name="departmentId" value={{department.departmentId}}>

            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="departmentName">Department Name</label>
                            <input class="form-control" name="departmentName" type="text"
                                value='{{department.departmentName}}'>
                        </div>
                    </div>

                </div>
            </fieldset>



            <hr>

            <input type="submit" class="btn btn-success pull-right" value="Update Department"><br><br><br>

        </form>
    </div>
</div>